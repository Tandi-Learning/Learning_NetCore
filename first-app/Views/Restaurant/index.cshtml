@model HomeIndexViewModel

@{
    ViewBag.Title = "Home Page";
}

<h1>All Restaurants</h1>
<table>
@foreach(var restaurant in Model.Restaurants) {
    <tr>
        <td style="border:solid 1px">@restaurant.Id</td>
        <td style="border:solid 1px">@restaurant.Name</td>
        <td>
            <a asp-action="detail" asp-route-id="@restaurant.Id">Detail</a>
        </td>
    </tr>
}
</table>
<a asp-action="create">Add Restaurant </a>

@section footer {
    @Model.CurrentMessage
}
